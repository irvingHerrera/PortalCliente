<div class="form-sections">
    <div class="col-sm-4">
        <div class="form-group">
            <div class="tag-text">ID de Pre-cliente</div>
            <input type="text" class="form-control datos" readonly
                   data-ng-model = "model.DatosCliente.IdPreclienteVisual"
                   placeholder="" id="in1">
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <div class="tag-text">Representante y/o Apoderado Legal</div>
            <input id="inp1" type="text" data-ng-model="model.DatosCliente.RepresentanteLegal" class="form-control" />
        </div>
    </div>
    <div class="col-sm-2"></div>
</div>

<div class="form-sections">
    <div class="col-sm-12">
        <h3 class="subtitle">Cliente</h3>
    </div>

    <div class="col-sm-6">
        <div class="form-group">
            <div class="tag-text">Nombre fiscal</div>
            <input id="inp2" type="text" data-ng-model="model.DatosCliente.NombreFiscal" class="form-control" />
        </div>
    </div>

    <div class="col-sm-6">
        <div class="form-group">
            <div class="tag-text">RFC</div>
            <input id="inp3" type="text" data-ng-model="model.DatosCliente.RFC" class="form-control" />
        </div>
    </div>

    <div class="col-sm-12">
        <div class="form-group">
            <div class="tag-text">Nombre comercial</div>
            <input id="inp4" type="text" data-ng-model="model.DatosCliente.NombreComercial" class="form-control" />
        </div>
    </div>

    <div class="col-sm-6">
        <div class="form-group">
            <div class="tag-text">Calle</div>
            <input id="inp5" type="text" data-ng-model="model.DatosCliente.Calle" class="form-control" />
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <div class="tag-text">No. Ext.</div>
            <input id="inp6" type="text" data-ng-model="model.DatosCliente.NoExt" class="form-control" />
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <div class="tag-text">No. Int.</div>
            <input id="inp7" type="text" data-ng-model="model.DatosCliente.NoInt" class="form-control" />
        </div>
    </div>


    <div class="col-sm-6">
        <div class="form-group">
            <div class="tag-text">Colonia</div>
            <input id="inp8" type="text" data-ng-model="model.DatosCliente.Colonia" class="form-control" />
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <div class="tag-text">Ciudad</div>
            <select class="form-control" name="state" id="in9"
                    data-ng-model="model.DatosCliente.Ciudad" 
                    data-ng-options="ciudad as ciudad.Descripcion for ciudad in catalogoCiudad">
                <option value="">Selecciona una ciudad</option>
            </select>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <div class="tag-text">C.P.</div>
            <input id="inp10" type="text" data-ng-model="model.DatosCliente.CP" class="form-control" />
        </div>
    </div>

    <div class="col-sm-6">
        <div class="form-group">
            <div class="tag-text">Estado</div>
            <select class="form-control"
                    name="state" id="inp11"
                    data-ng-change="obtenerCiudad(Estado)"
                    data-ng-options="edo as edo.Descripcion for edo in catalogoEstado"
                    data-ng-model="model.DatosCliente.Estado">
                <option value="">Selecciona un estado</option>
            </select>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <div class="tag-text">País</div>
            <select class="form-control"
                    name="state" id="in12"
                    data-ng-change="obtenerEstado(Pais)"
                    data-ng-options="pais as pais.Descripcion for pais in catalogoPais"
                    data-ng-model="model.DatosCliente.Pais">
                <option value="">Selecciona un país</option>
            </select>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <div class="form-group">
                <div class="tag-text">Teléfono</div>
                <input id="inp13" type="text" 
                       data-ng-model="model.DatosCliente.Telefono" class="form-control" />
            </div>
        </div>
    </div>
</div>
