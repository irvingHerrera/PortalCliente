                                    <option value="Cuentas por pagar">Cuentas por pagar</option>
                                    <option value="Contabilidad">Contabilidad</option>
                                    <option value="Finanzas">Finanzas</option>
                                    <option value="Operaciones">Operaciones</option>
                                </select>
                            </td>
