            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="tag-text">Monto</div>
                        <input type="number" class="form-control datos" placeholder="" id="in30" data-ng-model="modelo.Monto">
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="tag-text">Para uso en</div>
                        <select class="form-control" name="state" id="in31" data-ng-model="modelo.ParaUso">
                            <option value="">Seleccionar</option>
                            <option value="Impuestos">Impuestos</option>
                            <option value="Terceros">Terceros</option>
                            <option value="Impuestosyterceros">Impuestos y terceros</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="tag-text">Punto de reorden</div>
                        <input type="text" class="form-control datos" placeholder="" id="in32" data-ng-model="modelo.PuntoReorden">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="tag-text">Recuperación</div>
                        <select class="form-control" name="state" id="in33" data-ng-model="modelo.Recuperacion">
                            <option value="">Seleccionar</option>
                            <option value="Factura">Factura</option>
                            <option value="Rendición">Rendición</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="tag-text">Plazo</div>
                        <select class="form-control" name="state" id="in34" data-ng-model="modelo.Plazo">
                            <option value="">Seleccionar</option>
