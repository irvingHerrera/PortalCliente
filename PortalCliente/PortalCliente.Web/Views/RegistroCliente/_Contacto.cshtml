
<div class="form-sections">
    <div class="col-sm-12">
        <h3 class="subtitle">Información de contactos</h3>
    </div>

    <div class="col-sm-12">
        <div class="table-responsive">
            <table class="tablesorter table table-striped table-bordered table-hover">
                <thead class="table-rows star">
                    <tr>
                        <th>Área <i class="fa fa-angle-down"></i></th>
                        <th>Nombre <i class="fa fa-angle-down"></i></th>
                        <th>Email <i class="fa fa-angle-down"></i></th>
                        <th>Teléfono <i class="fa fa-angle-down"></i></th>
                        <th>Puesto/Dpto. <i class="fa fa-angle-down"></i></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="numbers1">
                    <tr class="table-rows">
                        <td>
                            @*<input type="text" class="form-control"
                                placeholder="" id="area-in" data-ng-model="contacto.Area">*@


                            <select class="form-control facsame" name="state"
                                    id="area-in"
                                    data-ng-model="contacto.Area">
                                <option value="">Seleccionar</option>
                                <option value="Cuentas por pagar">Cuentas por pagar</option>
                                <option value="Contabilidad">Contabilidad</option>
                                <option value="Finanzas">Finanzas</option>
                                <option value="Operaciones">Operaciones</option>
                            </select>
                        </td>
                        <td>
                            <input type="text" class="form-control"
                                   placeholder="" id="nombre-in" data-ng-model="contacto.Nombre">
                        </td>
                        <td>
                            <input type="text" class="form-control"
                                   placeholder="" id="email-in" data-ng-model="contacto.Correo">
                        </td>
                        <td>
                            <input type="tel" class="form-control"
                                   placeholder="" id="telefono-in" data-ng-model="contacto.Telefono">
                        </td>
                        <td>
                            <input type="text" class="form-control"
                                   placeholder="" id="telefono-in" data-ng-model="contacto.PuestoDepartamento">
                        </td>
                        <td>
                            <i id="add-tr" class="fas fa-plus boxtool" data-ng-click="agregarContacto(contacto)">
                                <div class="tooltip">Agregar</div>
                            </i>
                        </td>
                    </tr>

                    <tr data-ng-repeat="item in modeloContacto" class="table-rows" id="fila{{$index + 1}}">
                        <td>
                            @*<input type="text" class="form-control" data-ng-model="item.Area" disabled="">*@

                            <select class="form-control" name="state"
                                    disabled=""
                                    data-ng-model="item.Area">
                                <option value="">Seleccionar</option>
                                <option value="Cuentas por pagar">Cuentas por pagar</option>
                                <option value="Contabilidad">Contabilidad</option>
                                <option value="Finanzas">Finanzas</option>
                                <option value="Operaciones">Operaciones</option>
                            </select>
                        </td>
                        <td><input type="text" class="form-control" data-ng-model="item.Nombre" disabled=""></td>
                        <td><input type="text" class="form-control" data-ng-model="item.Correo" disabled=""></td>
                        <td><input type="tel" class="form-control" data-ng-model="item.Telefono" disabled=""></td>
                        <td><input type="text" class="form-control" data-ng-model="item.PuestoDepartamento" disabled=""></td>
                        <td>
                            <i id="save{{$index + 1}}" class="fas fa-save btn-save boxtool" data-ng-click="actualizarFilaContacto($index + 1)">
                                <div class="tooltip">Guardar</div>
                            </i><i id="edit{{$index + 1}}" class="fas fa-pencil-alt boxtool" data-ng-click="editarFilaContacto($index + 1)">
                                <div class="tooltip">Editar</div>
                            </i>
                            <i class="fas fa-trash-alt boxtool" data-ng-click="eliminarFilaContacto($index)">
                                <div class="tooltip">Borrar</div>
                            </i>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
        <div id="req-table1" class="requerido">Debes capturar por lo menos un registro</div>
    </div>
</div>
