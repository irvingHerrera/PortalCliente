<div class="form-sections">
    <div class="col-sm-12">
        <h3 class="subtitle">Cliente</h3>
    </div>

    <div class="col-sm-6">
        <div class="form-group">
            <div class="tag-text">Nombre fiscal</div>
            <input type="text" class="form-control datos"
                   placeholder="" id="in3" data-ng-model="modelo.NombreFiscal">
        </div>
    </div>

    <div class="col-sm-6">
        <div class="form-group">
            <div class="tag-text">RFC</div>
            <input type="text" class="form-control datos"
                   placeholder="" id="in4" data-ng-model="modelo.RFC">
        </div>
    </div>

    <div class="col-sm-12">
        <div class="form-group">
            <div class="tag-text">Nombre comercial</div>
            <input type="text" class="form-control datos"
                   placeholder="" id="in5" data-ng-model="modelo.NombreComercial">
        </div>
    </div>

    <div class="col-sm-6">
        <div class="form-group">
            <div class="tag-text">Calle</div>
            <input type="text" class="form-control datos"
                   placeholder="" id="in6" data-ng-model="modelo.Calle">
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <div class="tag-text">No. Ext.</div>
            <input type="text" class="form-control datos"
                   placeholder="" id="in7" data-ng-model="modelo.NoExt">
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <div class="tag-text">No. Int.</div>
            <input type="text" class="form-control datos"
                   placeholder="" id="in8" data-ng-model="modelo.NoInt">
        </div>
    </div>


    <div class="col-sm-6">
        <div class="form-group">
            <div class="tag-text">Colonia</div>
            <input type="text" class="form-control"
                   placeholder="" id="in9" data-ng-model="modelo.Colonia">
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <div class="tag-text">C.P.</div>
            <input type="number" class="form-control"
                   placeholder="" id="in11" data-ng-model="modelo.CP">
        </div>
        
    </div>
    <div class="col-sm-3">
        <div class="tag-text">País</div>
        <div class="form-group">
            <select class="form-control"
                    name="state" id="in13"
                    data-ng-change="obtenerEstado(modelo.Pais.id)"
                    data-ng-options="pais as pais.Descripcion for pais in catalogoPais"
                    data-ng-model="modelo.Pais">
                <option value="">Selecciona un país</option>
            </select>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="form-group">
            <div class="tag-text">Estado</div>
            <div class="form-group">
                <select class="form-control"
                        name="state" id="in12"
                        data-ng-change="obtenerCiudad(modelo.Estado.id)"
                        data-ng-options="estado as estado.Descripcion for estado in catalogoEstado"
                        data-ng-model="modelo.Estado">
                    <option value="">Selecciona un estado</option>
                </select>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="tag-text">Ciudad</div>
        <div class="form-group">
            <select class="form-control" name="state" id="in10"
                    data-ng-model="modelo.Ciudad"
                    data-ng-options="ciudad as ciudad.Descripcion for ciudad in catalogoCiudad">
                <option value="">Selecciona una ciudad</option>
            </select>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <div class="tag-text">Teléfono</div>
            <input type="tel" class="form-control"
                   placeholder="" id="in14" data-ng-model="modelo.Telefono">
        </div>
    </div>

</div>
